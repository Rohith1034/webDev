<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <script src="https://kit.fontawesome.com/c0c3f998d0.js" crossorigin="anonymous"></script>
    <link rel="icon" href="to-do-list-apps.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100&family=Tinos&display=swap" rel="stylesheet">
</head>

<body>
    <nav>
        <ul>
            <form action="/home" method="post">
                <div class="input-icon-container">
                    <i class="fa-solid fa-house"></i>
                    <input type="submit" value="Home">
                </div>
            </form>
            <form action="/work" method="post">
                <div class="input-icon-container">
                    <i class="fas fa-solid fa-briefcase"></i>
                    <input type="submit" value="Work">
                </div>
            </form>
            <li><a href="#todoForm"><i class="fa-solid fa-plus"></i>Add new</a></li>
        </ul>
    </nav>
    <div class="work_list heading">
        <h1>Work list</h1>
    </div>
    <div id="container" class="container">

    </div>

    <form action="/form" method="post" id="todoForm">
        <div class="submitbutton">
            <input type="text" name="todoname" class="todoname">
            <input type="submit" class="addnewbtn" value="Add new">
        </div>
    </form>

    <!-- Your existing HTML content -->

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const todoForm = document.getElementById("todoForm");

            todoForm.addEventListener("submit", function (event) {
                event.preventDefault();
                const name = document.querySelector(".todoname").value;
                const parentElement = document.getElementById("container");
                const newitem = document.createElement("div");
                newitem.classList.add("item");
                newitem.textContent = name;
                parentElement.appendChild(newitem);
                const addinputbox = document.createElement("input");
                addinputbox.type = "checkbox";
                addinputbox.style.float = "left";
                addinputbox.classList.add("check");
                newitem.appendChild(addinputbox);
                newitem.style.textAlign = "centre";
            });
        });
    </script>



</body>

</html>

