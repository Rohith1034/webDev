    .submitbutton {
        height: 69px;
        width: 460px;
        margin: auto;
        margin-top: 30px;
        text-align: center;
        background-color: white;
        border-radius: 1px;
        display: flex;
        align-items: center;
    }

    .todoname {
        height: 69px;
        width: 350px;
        border: 1px solid white;
