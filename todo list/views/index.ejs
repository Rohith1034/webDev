        font-family: "helvetica neue";
    }

    ul {
        display: flex;
        list-style: none;
    }

    li {
        margin-left: 40px;
        color: rgb(166, 131, 227);
    }

    a:active {
        color: #ddd;
    }

    .workmode {
        margin-top: 0;
        margin-left: 40px;
        background-color: transparent;
        color: rgb(166, 131, 227);
        border: 0px;
        font-size: 18px;
        display: flex;
    }

    body {
        display: flex;
        flex-direction: column;
        justify-content: stretch;
        min-height: 95vh;
        font-style: "Times New Roman", Times, serif;
    }

    a {
        text-decoration: none;
    }

    .work_list {
        height: 75px;
        width: 460px;
        background-color: #a683e3;
        color: white;
        text-align: center;
        border-radius: 5px;
        margin: auto;
    }

    .container {
        margin: auto;
        margin-top: 10px;
        width: 460px;
        text-align: center;
    }

    .item {
        padding-top: 35px;
        height: 70px;
