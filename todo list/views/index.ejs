        font-size: 30px;
        background-color: white;
        border: 0.5px solid rgb(166, 131, 227);
        border-radius: 10px;
    }

    .check {
        margin-left: 20px;
    }

    .submitbutton {
        height: 69px;
        width: 460px;
        margin: auto;
        margin-top: 30px;
        text-align: center;
        background-color: white;
        border-radius: 1px;
        display: flex;
        align-items: center;
    }

    .todoname {
        height: 69px;
        width: 350px;
        border: 1px solid white;
        font-size: 35px;
